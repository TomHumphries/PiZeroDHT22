<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">

    <!-- Chart.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"
        integrity="sha256-R4pqcOYV8lt7snxMQO/HSbVCFRPMdrhAFMH+vr9giYI=" crossorigin="anonymous"></script>

</head>
<body style="margin: 0;">
    <div style="width: 100%; height: 50vh;">
        <canvas id="humidity"></canvas>
    </div>
    <div style="width: 100%; height: 50vh;">
        <canvas id="temperature"></canvas>
    </div>
    <script>
        var ctx_h = document.getElementById('humidity').getContext('2d');
        var cfg_h = {
            type: 'line',
            data: {
                datasets: [
                    {
                        label: 'Humidity',
                        data:  <%- JSON.stringify(humidity) %>,
                        backgroundColor: 'blue',
                        borderColor: 'blue',
                        fill: false,
                        type: 'line',
                        pointRadius: 0,
                        fill: false,
                        lineTension: 0,
                        borderWidth: 2,
                        borderJoinStyle: 'bevel'
                    }
                ]
            },
            options: {
				animation: {
					duration: 0
				},
                tooltips: {
                    mode: "x-axis",
                    enabled: true
                },
                legend: {
                    display: false
                },
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    xAxes: [{
						type: 'time',
                        distribution: 'linear'
                    }]
                }
            }
        }
        var chartHumidity = new Chart(ctx_h, cfg_h);

        
        var ctx_t = document.getElementById('temperature').getContext('2d');
        var cfg_t = {
            type: 'line',
            data: {
                datasets: [
                    {
                        label: 'Temperature',
                        data:  <%- JSON.stringify(temperature) %>,
                        backgroundColor: 'red',
                        borderColor: 'red',
                        fill: false,
                        type: 'line',
                        pointRadius: 0,
                        fill: false,
                        lineTension: 0,
                        borderWidth: 2,
                        borderJoinStyle: 'bevel'
                    }
                ]
            },
            options: {
				animation: {
					duration: 0
                },
                tooltips: {
                    mode: "x-axis",
                    enabled: true
                },
                legend: {
                    display: false
                },
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    xAxes: [{
						type: 'time',
                        distribution: 'linear'
                    }]
                }
            }
        }
        var chartHumidity = new Chart(ctx_t, cfg_t);
    </script>
</body>
</html>